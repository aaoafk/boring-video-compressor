<div class="bg-gray-100 min-h-screen flex items-center justify-center">
  <div class="max-w-md w-full space-y-8">
    <% if flash[:success].present? %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">Success!</strong>
        <span class="block sm:inline"><%= flash[:success] %></span>
      </div>
    <% elsif flash[:alert].present? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">Error!</strong>
        <span class="block sm:inline"><%= flash[:alert] %></span>
      </div>
    <% end %>

    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Boring Video Compressor
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Compress your videos with ease.
      </p>
    </div>

    <div class="mt-12 bg-white shadow-md rounded-lg p-6">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Media</h2>
      <!-- Placeholder for media upload or display -->
      <div class="bg-gray-200 h-64 rounded-lg flex items-center justify-center">
        <p class="text-gray-500">Upload your media here</p>
      </div>
    </div>

    <%= form_tag compress_video_path, multipart: true, class: "mt-8 space-y-6" do %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <%= file_field_tag :input_file, required: true, class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= submit_tag "Compress Video", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>